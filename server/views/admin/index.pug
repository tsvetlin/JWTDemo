block content
    .container
        .row
            .col-md-4.col-md-offset-4
                .login-panel.panel.panel-default
                    .panel-heading
                        h3.panel-title Please Log In
                    .panel-body
                        form(role='form', method='post', action='/login')
                            fieldset
                                .form-group
                                    input.form-control(placeholder='Username', name='username', type='text', autofocus='')
                                .form-group
                                    input.form-control(placeholder='Password', name='password', type='password', value='')
                                if error
                                    div.error-block Error!!
                                button.btn.btn-lg.btn-success.btn-block(type='submit') Login
